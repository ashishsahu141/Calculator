<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">





        <TextView
            android:id="@+id/answerTextView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/white"
            android:text="0"
            android:textSize="30sp"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="end|bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/answerTextView">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="#271414"
                    android:text="AC"
                android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:id="@+id/ac"
                    android:onClick="allSetToZero"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/black"
                    android:text="C"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:id="@+id/clear"
                    android:onClick="clickEvent"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/black"
                    android:text="%"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:id="@+id/percentage"
                    android:onClick="operatorClicking"

                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/black"
                    android:text="/"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:id="@+id/divide"
                    android:onClick="operatorClicking"

                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="#19B6D3"
                    android:text="7"
                    android:id="@+id/seven"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:onClick="clickEvent"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="#19B6D3"
                    android:text="8"
                    android:id="@+id/eight"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:onClick="clickEvent"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="#19B6D3"
                    android:text="9"
                    android:id="@+id/nine"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:onClick="clickEvent"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/black"
                    android:text="x"
                    android:id="@+id/multiply"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:onClick="operatorClicking"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="#19B6D3"
                    android:text="4"
                    android:id="@+id/four"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:onClick="clickEvent"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="#19B6D3"
                    android:text="5"
                    android:id="@+id/five"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:onClick="clickEvent"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="#19B6D3"
                    android:text="6"
                    android:id="@+id/six"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:onClick="clickEvent" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/black"
                    android:text="-"
                    android:id="@+id/minus"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="#19B6D3"
                    android:text="1"
                    android:id="@+id/one"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:onClick="clickEvent" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="#19B6D3"
                    android:text="2"
                    android:id="@+id/two"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:onClick="clickEvent"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="#19B6D3"
                    android:text="3"
                    android:id="@+id/three"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:onClick="clickEvent"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/black"
                    android:text="@string/plus"
                    android:id="@+id/plus"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:onClick="operatorClicking"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/black"
                    android:text="00"
                    android:id="@+id/doubleZero"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:onClick="clickEvent"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="#19B6D3"
                    android:text="0"
                    android:id="@+id/singleZero"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:onClick="clickEvent"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/black"
                    android:text="."
                    android:id="@+id/dot"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:onClick="clickEvent"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:backgroundTint="@color/black"
                    android:text="="
                    android:textColor="#FBCE45"
                    android:id="@+id/equals"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    app:cornerRadius="5dp"
                    android:onClick="getAnswer"/>

            </TableRow>

        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
